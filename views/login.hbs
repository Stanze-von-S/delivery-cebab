<h1 class="text-center">Вход на сайт</h1>
<form id="signinForm" method="POST" action="/login">
  <div class="form-group">
    <label for="email">Адрес электронной почты:
      <input id="email" class="form-control" name="email" type="email" required minlength="4">
    </label>
  </div>
  <div class="form-group">
    <label for="password">Пароль:
      <input id="password" class="form-control" name="password" type="password" required minlength="4">
    </label>
  </div>
  <button type="submit" class="btn btn-primary">Войти</button>
</form>
<script src="js/login.js"></script>
