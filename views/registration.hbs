{{#if error}}
<h1>Ошибка</h1>
<p>Пользователь с таким адресом электронной почты уже есть. Пожалуйста, зарегистрируйтесь.</p>
{{else}}
<h1>Регистрация</h1>
{{/if}}
<form id="signupForm" method="POST" action="/registration">
  <div class="form-group">
    <label for="username">Логин:
      <input id="username" class="form-control" name="username" type="text" required >
    </label>
  </div>
  <div class="form-group">
    <label for="email">Email:
      <input id="email" class="form-control" name="email" type="email" required>
    </label>
  </div>
  <div class="form-group">
    <label for="password">Пароль:
      <input id="password" class="form-control" name="password" type="password" required minlength="4">
    </label>
  </div>
  <div class="form-group">
    <label for="phone">Телефон:
      <input id="phone" class="form-control" name="phone" type="tel" required>
    </label>
  </div>
  <div class="form-group">
    <label for="role">Выберите между курьером и клиентом:
      <select id="role" class="form-control" name="role" required>
        <option value="courier">Курьер</option>
        <option value="customer">Клиент</option>
      </select>
    </label>
  </div>
  <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
</form>
<script defer src="/js/registration.js"></script>
